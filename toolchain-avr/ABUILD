build()
{
go_src_dir
burn_patches
mkdir -p ${pkgdir}/opt/toolchains
echo "/opt/toolchains/avr/bin" > ${pkgdir}/opt/toolchains/avr.toolchain 
chmod +x ${pkgdir}/opt/toolchains/avr.toolchain 
}


